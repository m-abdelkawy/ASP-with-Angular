@model IEnumerable<Hacienda.Task.DAL.Person>

@{
    ViewBag.Title = "Index";
}
<html ng-app="personAppMod">
<body ng-controller="personController">
    <h2>Index</h2>
    <h2>{{title}}</h2>


    <p>
        @Html.ActionLink("Create New", "New")
    </p>

    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-ui-router.js"></script>
    <script src="~/JSFiles/personApp.js"></script>
    <script src="~/JSFiles/personController.js"></script>
    <script src="~/JSFiles/routing.js"></script>

    <table class="table" ng-init="getPeople()">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>

        <tr ng-repeat='item in peopleList'>
            <td>{{item.Id}}</td>

            <td>{{item.Name}}</td>
            <td>{{item.BirthDate}}</td>
            <td>{{item.City.Name}}</td>
            <td>{{item.Gender.Name}}</td>
            <td>{{item.Image}}</td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>*@
            <td>

                @{
                    var url = Url.Action("Edit", "People", new { id = "{{id=item.Id}}" });
                    url = HttpUtility.UrlDecode(url);
                }

                <a data-ng-href="@url">Edit</a>

                <a ng-click="deletePerson(item.Id)" class="btn btn-info">Delete</a>

                @*@Html.ActionLink("Edit", "Edit", new { id = "{{item.Id}}" })*@
                @*<a ui-sref="EditPerson({personId: item.Id})" class="btn btn-info">Edit</a>*@
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = "{{item.Id}}" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>*@
        </tr>



    </table>
</body>
</html>

